{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Weather API (Default Location)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/index.js",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Run Weather API (Custom Coordinates)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/index.js",
            "args": ["40.7128", "-74.0060"],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Run Weather API (Paris)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/index.js",
            "args": ["48.8566", "2.3522"],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}